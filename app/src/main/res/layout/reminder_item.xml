<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue1"
    android:padding="12dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Headache"
        android:textColor="@color/black2"
        android:id="@+id/medicationName"
        android:textSize="@dimen/textSize_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:fontFamily="@font/roboto_bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 times"
        android:textColor="@color/ash"
        android:textSize="@dimen/textSize_small"
        android:id="@+id/medInterval"
        android:textStyle="normal"
        android:gravity="fill|start|center"
        app:layout_constraintTop_toBottomOf="@id/medicationName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="3dp"
        android:fontFamily="@font/roboto_regular" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20:00 pm"
        android:textColor="@color/ash"
        android:textSize="@dimen/textSize_small"
        android:id="@+id/medStartTime"
        android:textStyle="normal"
        android:gravity="fill|start|center"
        app:layout_constraintTop_toBottomOf="@id/medInterval"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="3dp"
        android:fontFamily="@font/roboto_regular"
        />

    <TextView
        android:id="@+id/medStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill|start|center"
        android:text="23rd April 2019"
        android:textColor="@color/ash"
        android:textSize="@dimen/textSize_small"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medStartTime"
        android:fontFamily="@font/roboto_regular"
        android:padding="3dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23rd April 2019"
        android:textColor="@color/ash"
        android:textSize="@dimen/textSize_small"
        android:id="@+id/medEndDate"
        android:textStyle="normal"
        android:fontFamily="@font/roboto_regular"
        android:gravity="fill|start|center"
        app:layout_constraintTop_toBottomOf="@id/medStartDate"
        android:padding="3dp"
        app:layout_constraintLeft_toLeftOf="parent"/>



</android.support.constraint.ConstraintLayout>